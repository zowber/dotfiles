!Based on https://www.reddit.com/r/unixporn/comments/69008j/i3gaps_1984/

!https://wiki.archlinux.org/index.php/Rxvt-unicode#Font_declaration_methods
*.font: xft:Roboto Mono:size=11
Xft.dpi:                        96
Xft.antialias:                  1
Xft.hinting:                    1
Xft.hintstyle:                  hintslight
Xft.lcdfilter:                  lcdlight
Xft.rgba:                       rgb

URxvt*termName:                 rxvt-256color
URxvt.depth:                    32
URxvt*lineSpace:                1
URxvt.letterSpace:              -1
URxvt.iso14755:                 false
URxvt.iso14755_52:              false
URxvt*geometry:                 110x50
URxvt.scrollBar:                false
URxvt*loginShell:               true
URxvt.internalBorder:           30

!https://wiki.archlinux.org/index.php/Rxvt-unicode#Clickable_URLs
URxvt.perl-ext:	 		default,matcher
URxvt.url-launcher:             chromium
URxvt.matcher.button: 		1

!https://wiki.archlinux.org/index.php/Rxvt-unicode#Simple_tabs
!https://wiki.archlinux.org/index.php/Rxvt-unicode#Fullscreen
URxvt.perl-ext-common: tabbed,fullscreen
URxvt.keysym.F11: perl:fullscreen:switch

*.foreground:   #ffeefc
*.background:   #141021
*.cursorColor:  #c16772

! black
*.color0:       #4f4858
*.color8:       #545d67

! red
*.color1:       #c05c47
*.color9:       #c16772

! green
*.color2:       #428e8e
*.color10:      #afda6e

! yellow
*.color3:       #e4b226
*.color11:      #ebcf1a

! blue
*.color4:       #4457a3
*.color12:      #4880a5

! magenta
*.color5:       #903a62
*.color13:      #9568a1

! cyan
*.color6:       #7aa1dc
*.color14:      #abbcda

! white
*.color7:       #c4b7c5
*.color15:      #ffeefc

rofi.color-enabled: true
rofi.color-window: #141021, #c16772, #9568a1
rofi.color-normal: #141021, #ffeefc, #312842, #c16772, #ffeefc
rofi.color-active: #141021, #c05c47, #312842, #c05c47, #ffeefc
rofi.color-urgent: #141021, #e4b226, #312842, #e4b226, #ffeefc
rofi.width: 800
rofi.padding: 30
rofi.font: Roboto Mono:size 14
rofi.bw: 3
rofi.separator-style: solid
rofi.hide-scrollbar: true
